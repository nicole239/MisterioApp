<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutCardNotebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/teal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCardIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <RadioGroup
            android:id="@+id/rbtnNotebookAnnotate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnUnknown"
                android:checked="true"
                android:buttonTintMode="multiply"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:button="@android:drawable/ic_menu_help" />

            <RadioButton
                android:id="@+id/btnInnocent"
                android:checked="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:button="@android:drawable/ic_menu_close_clear_cancel"/>
            <RadioButton
                android:id="@+id/btnGuilty"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:button="@android:drawable/ic_menu_compass"/>

        </RadioGroup>

    </LinearLayout>


</FrameLayout>